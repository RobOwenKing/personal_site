<h1>Conway's Game of Life</h1>

<ul>
  <li id="dark" class="btn btn-blue btn-active">Dark mode</li>
  <li id="light" class="btn btn-orange">Light mode</li>
</ul>

<canvas></canvas>

<ul>
  <li id="autoplay" class="btn btn-orange">Autoplay</li>
  <label for="speed">Speed: </label>
  <input type="range" min="1" max="100" id="speed" class="slider slider-opacity">
  <li id="iterate" class="btn btn-blue">Iterate</li>
</ul>

